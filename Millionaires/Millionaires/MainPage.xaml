<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourNamespace.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <!-- Pierwszy panel z zdjęciem -->
        <StackLayout Grid.Row="0">
            <Image Source="your_image.png" Aspect="AspectFit" />
        </StackLayout>
        <!-- Drugi panel z kołami ratunkowymi -->
        <StackLayout Grid.Row="1" Orientation="Vertical">
            <Button Text="50:50" />
            <Button Text="Telefon do przyjaciela" />
            <Button Text="Pytanie do publiczności" />
        </StackLayout>
        <!-- Trzeci panel z odpowiedziami a,b,c,d -->
        <StackLayout Grid.Row="2" Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Button Text="A" HorizontalOptions="FillAndExpand" />
                <Button Text="B" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="C" HorizontalOptions="FillAndExpand" />
                <Button Text="D" HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>